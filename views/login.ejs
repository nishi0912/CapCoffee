<%- include("partials/header" , {title : 'CapCoffee|Login'}); %>

    <link rel="stylesheet" href="CSS/home.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    
</head>
<body>
    <form action="/finalCoffeeproject" method="post"> 
<div class="loader-page">
    <div class="flex homepage">

        <div class="container-2">
                <div class="title"><i class="fas fa-coffee mug arrow-icon"></i>CAFE-COFFEE</div>
                        <input class="loginDetails" type="text" id="user" name="User" placeholder="Username or Email" required autofocus autocomplete="off">
                        <input class="loginDetails" type="password" id="pass" name="userPassword" placeholder="Password" required autocomplete="off">
                        <% if(isreg === "true"){ %>
                        <% console.log("IsRegistered - "+isreg); %>
                        <% console.log("New - Location - "+NewLocation); %>
                        <input type="hidden" name="registeredpassword" value="<%= registeredPassword %>">
                        <input type="hidden" name="NewLocation" value="<%= NewLocation %>">
                            <% }else if(isreg === "logback") {%>
                            <% console.log("I am currently in second - "+Logout); %>
                            <input type="hidden" name="NewLocation" value="<%= NewLocation %>">
                            <input type="hidden" name="logoutpass" value="<%= Logout %>">
                        <% }else if(isreg === "Re-locate"){ %>
                            <input type="text" class="loginDetails" name="reLocate" placeholder="Enter newlocation">
                            <input type="hidden" name="registeredpassword" value="<%= registeredPassword %>">
                        <% } %>
                
                    <div class="buttons">
                    <%- include("partials/button" , {idname:'bq',buttonname : 'Log-in' , className:'btn',Name:'',valuename:''}); %>
                        </form>
                        <form action="/forgot" method="get">
                            <%- include("partials/button" , {idname:'',buttonname : 'Forgot?' , className:'btn',Name:'',valuename:''}); %>
                        </form>
                </div>
                <div  class="remember">
                    <input class="checkBox" type="checkbox"> Remember me
                </div>
                <%- include("partials/footer") %>
        </div>
    </div>

    <section class="flex">
        <%- include("partials/loading"); %>
    </section>
    
</div>
    <script src="JAVASCRIPT/Login.js"></script>
</body>
</html>
